@model SOLUDIAMAGHREB.Models.Utilisateur
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title | SOLUDIAMAGHREB</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="Themesbrand" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/assets/images/icon.ico">

    <!-- Bootstrap Css -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Icons Css -->
    <link href="~/assets/css/icons.min.css" rel="stylesheet" />
    <!-- App Css-->
    <link href="~/assets/css/app.min.css" rel="stylesheet" />

</head>
<body>

    <div class="account-pages my-5 pt-sm-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card overflow-hidden">
                        <div class="bg-primary-subtle">
                            <div class="row">
                                <div class="col-7">
                                    <div class="text-primary p-4">
                                        <h5 class="text-primary">Register</h5>
                                        <p>Create New account in |SOLUDIAMAGHREB.</p>
                                    </div>
                                </div>
                                <div class="col-5 align-self-end">
                                    <img src="~/assets/images/profile-img.png" alt="" class="img-fluid">
                                </div>
                            </div>
                        </div>
                        <div class="card-body pt-0">

                            <div class="p-2">
                                <form class="needs-validation" novalidate asp-controller="Login" asp-action="Register" method="post">

                                    <div class="mb-3">
                                        <label for="Nom" class="form-label">Nom</label>
                                        <!-- <input type="email" class="form-control" id="Nom" placeholder="Enter Nom" required>-->
                                        <input class="form-control" type="text" placeholder="Nom" asp-for="Nom" required />
                                        <div class="invalid-feedback">
                                            Please Enter Nom
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label for="prenom" class="form-label">Prenom</label>
                                        <!--<input type="text" class="form-control" id="Prenom" placeholder="Enter Prenom" required>-->
                                        <input class="form-control" type="text" placeholder="Prenom" asp-for="Prenom" required />
                                        <div class="invalid-feedback">
                                            Please Enter Prenom
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="username" class="form-label">Username</label>
                                        <!--<input type="text" class="form-control" id="username" placeholder="Enter username" required>-->
                                        <input class="form-control" type="text" placeholder="Username" required asp-for="UserName" />
                                        <div class="invalid-feedback">
                                            Please Enter Username
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="Email" class="form-label">Email</label>
                                        <!--<input type="text" class="form-control" id="username" placeholder="Enter username" required>-->
                                        <input class="form-control" type="text" placeholder="Email" required asp-for="Email" />
                                        <div class="invalid-feedback">
                                            Please Enter Email
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label for="userpassword" class="form-label">Password</label>
                                        <!--<input type="password" class="form-control" id="userpassword" placeholder="Enter password" required>-->
                                        <input class="form-control" type="password" placeholder="Password" required asp-for="Clave" />
                                        <div class="invalid-feedback">
                                            Please Enter Password
                                        </div>
                                    </div>

                                    <div class="mt-4 d-grid">
                                        <button class="btn btn-primary waves-effect waves-light" type="submit">Register</button>
                                    </div>
                                    @if (ViewData["Message"] != null)
                                    {

                                        <div class="form-group">
                                            <div class="alert alert-danger" role="alert">
                                                @ViewData["Message"]
                                            </div>
                                        </div>
                                    }
                                </form>
                            </div>

                        </div>
                    </div>
                    <div class="mt-5 text-center">

                        <div>
                            <p>Already have an account ? <a href=@Url.Action("LoginSession", "Login") class="fw-medium text-primary"> Login</a> </p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- validation init -->
    <script src="~/assets/js/pages/validation.init.js"></script>

    <!-- App js -->
    <script src="~/assets/js/app.js"></script>

</body>
</html>
