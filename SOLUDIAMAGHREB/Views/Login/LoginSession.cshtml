@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title | SOLUDIAMAGHREB</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="Themesbrand" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/assets/images/icon.ico">

    <!-- Bootstrap Css -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Icons Css -->
    <link href="~/assets/css/icons.min.css" rel="stylesheet" />
    <!-- App Css-->
    <link href="~/assets/css/app.min.css" rel="stylesheet" />

</head>
<body>
    <div class="account-pages my-5 pt-sm-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card overflow-hidden">
                        <div class="bg-primary-subtle">
                            <div class="row">
                                <div class="col-7">
                                    <div class="text-primary p-4">
                                        <h5 class="text-primary">Welcome Back !</h5>
                                        <p>Sign in SOLUDIA MAGHREB.</p>
                                    </div>
                                </div>
                                <div class="col-5 align-self-end">
                                    <img src="~/assets/images/profile-img.png" alt="" class="img-fluid">
                                </div>
                            </div>
                        </div>
                        <div class="card-body pt-0">
                            <!-- <div class="auth-logo">
                                 <a href=@Url.Action("Index", "Dashboard") class="auth-logo-light">
                                     <div class="avatar-md profile-user-wid mb-4">
                                         <span class="avatar-title rounded-circle bg-light">
                                             <img src="~/assets/images/logo-light.svg" alt="" class="rounded-circle" height="34">
                                         </span>
                                     </div>
                                 </a>

                                 <a href=@Url.Action("Index", "Dashboard") class="auth-logo-dark">
                                     <div class="avatar-md profile-user-wid mb-4">
                                         <span class="avatar-title rounded-circle bg-light">
                                             <img src="~/assets/images/logo.svg" alt="" class="rounded-circle" height="34">
                                         </span>
                                     </div>
                                 </a>
                             </div>-->
                            <div class="p-2">
                                <form class="form-horizontal" asp-controller="Login" asp-action="LoginSession" method="post">

                                    <div class="mb-3">
                                        <label for="username" class="form-label">Username</label>
                                        <input type="text" class="form-control" placeholder="Username" required name="username" />
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Password</label>
                                        <div class="input-group auth-pass-inputgroup">
                                            <input type="password" class="form-control" placeholder="Password" required name="clave" />
                                            <!--<button class="btn btn-light " type="button" id="password-addon"><i class="mdi mdi-eye-outline"></i></button>-->
                                        </div>
                                    </div>

                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="remember-check">
                                        <label class="form-check-label" for="remember-check">
                                            Remember me
                                        </label>
                                    </div>

                                    <div class="mt-3 d-grid">
                                        <button class="btn btn-primary waves-effect waves-light" type="submit">Log In</button>
                                    </div>
                                    @if (ViewData["Message"] != null)
                                    {

                                        <div class="form-group">
                                            <div class="alert alert-danger" role="alert">
                                                @ViewData["Message"]
                                            </div>
                                        </div>
                                    }

                                    <!-- <div class="mt-4 text-center">
                                         <a href=@Url.Action("Recoverpw", "Auth") class="text-muted"><i class="mdi mdi-lock me-1"></i> Forgot your password?</a>
                                     </div>-->
                                </form>
                            </div>

                        </div>
                    </div>
                    <div class="mt-5 text-center">

                        <div>
                            <p>Don't have an account ? <a href=@Url.Action("Register", "Login") class="fw-medium text-primary"> Signup now </a> </p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- App js -->
    <script src="~/assets/js/app.js"></script>

</body>
</html>
