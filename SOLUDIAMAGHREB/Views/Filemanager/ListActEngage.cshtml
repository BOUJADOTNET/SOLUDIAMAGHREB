@model List<SOLUDIAMAGHREB.Models.Actmanager>


<div class="text-center" style="width:100%">
    <h4 class="display-4">Acte d'engagement</h4>
    <div>
        <div class="card-header">
        </div>
        <div class="card-body">
            <a class="btn btn-success btn-sm" asp-action="GenerateActEngage" asp-controller="Filemanager">
                Generate Acte d'engagement
            </a>
            <hr />
          
                <table class="table table-striped">
                    <thead>
                        <tr>
                        <th>Numero de Acte</th>
                        <th>Numero de bordereau</th>
                        <th>Numero de Lot</th>
                            <th>Date de Document</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var items in Model)
                        {
                            <tr>
                            <td>@items.IdactEng</td>
                            <td>@items.NomberBordereau</td>
                            <td>@items.NLot</td>
                                <td>@items.DateCreation.Date.ToShortDateString()</td>
                            <td>
                                <a class="btn btn-success btn-sm custom-button" asp-action="EditActEngage" asp-controller="Filemanager" asp-route-IdEngage="@items.IdactEng">Edit</a>
                                @*  <button class="btn btn-success" asp-action="EditActEngage" asp-controller="Filemanager" asp-route-IdActEngage="@items.IdactEng"  >Edit</button> *@


                                @* <!-- <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Home" asp-route-IdDetalleVenta="@items.IdDetalleVenta">Delete</a>--> *@
                                @* <a class="btn btn-primary btn-sm" asp-action="ViewPdf" asp-controller="Filemanager" asp-route-IdActEngage="@items.IdactEng">View</a> *@
                                <a id="btn-View" class="btn btn-info custom-button"
                                   href="javascript:void(0);"
                                   onclick="window.open('@Url.Action("ViewPdf", new { IdActEngage = items.IdactEng })', '_blank');">Aperçu</a>
                                <a class="btn btn-primary btn-sm custom-button" asp-action="ImprimerAct" asp-controller="Filemanager" asp-route-IdActEngage="@items.IdactEng">Print</a>


                            </td>
                            </tr>
                        }
                    </tbody>
                </table>
         
        </div>
  
        <style>
            .custom-button {
                font-size: 78%;
                text-align: center;
                padding: 10px;
            }
        </style>
        @section scripts {
            <script src="~/assets/js/app.js"></script>
            <!-- Include jQuery and Bootstrap JS if not already included in the layout -->
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/js/bootstrap.bundle.min.js"></script>
        }
